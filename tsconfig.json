{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "rust-src": [
        "./rust-src/pkg"
      ],
      "neos-assets/*": [
        "./neos-assets/*"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
