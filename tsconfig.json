{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "rust-src": [
        "./rust-src/pkg"
      ],
      "neos-assets/*": [
        "./neos-assets/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node"
  }  
}
